{
  "extends": "airbnb-base",
  "env": {
    "es6": true,
    "jasmine": true,
    "node": true
  },
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "script"
  },
  "rules": {
    "arrow-body-style": 0,
    "arrow-parens": [2, "as-needed", { "requireForBlockBody": true }],
    "class-methods-use-this": 0,
    "max-len": [2, { "code": 80 }],
    "no-param-reassign": 0,
    "no-plusplus": 0,
    "no-unused-expressions": 0,
    "no-use-before-define": 0,
    "object-curly-newline": 0,
    "prefer-destructuring": 0,
    "prefer-template": 0,
    "strict": [2, "global"]
  }
}
